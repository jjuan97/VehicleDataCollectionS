<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title_principal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sensors"
            android:textSize="20sp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/title_accelerometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:text="@string/accelerometer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/x_a_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/x_equal" />

            <TextView
                android:id="@+id/x_a_value"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:text="@string/value" />

            <TextView
                android:id="@+id/x_a_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/m_s2" />

            <TextView
                android:id="@+id/y_a_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/y_equal" />

            <TextView
                android:id="@+id/y_a_value"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:text="@string/value" />

            <TextView
                android:id="@+id/y_a_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/m_s2" />

            <TextView
                android:id="@+id/z_a_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/z_equal" />

            <TextView
                android:id="@+id/z_a_value"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:text="@string/value" />

            <TextView
                android:id="@+id/z_a_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/m_s2" />

        </LinearLayout>


        <TextView
            android:id="@+id/title_gyroscope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:textStyle="bold"
            android:text="@string/gyroscope" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/x_g_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/x_equal" />

            <TextView
                android:id="@+id/x_g_value"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:text="@string/value" />

            <TextView
                android:id="@+id/x_g_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rad_s" />

            <TextView
                android:id="@+id/y_g_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/y_equal" />

            <TextView
                android:id="@+id/y_g_value"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:text="@string/value" />

            <TextView
                android:id="@+id/y_g_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rad_s" />

            <TextView
                android:id="@+id/z_g_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/z_equal" />

            <TextView
                android:id="@+id/z_g_value"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:text="@string/value" />

            <TextView
                android:id="@+id/z_g_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rad_s" />

        </LinearLayout>


        <TextView
            android:id="@+id/title_magnetometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:textStyle="bold"
            android:text="@string/magnetometer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/x_m_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/x_equal" />

            <TextView
                android:id="@+id/x_m_value"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:text="@string/value" />

            <TextView
                android:id="@+id/x_m_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/micro_tesla" />

            <TextView
                android:id="@+id/y_m_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/y_equal" />

            <TextView
                android:id="@+id/y_m_value"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:text="@string/value" />

            <TextView
                android:id="@+id/y_m_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/micro_tesla" />

            <TextView
                android:id="@+id/z_m_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/z_equal" />

            <TextView
                android:id="@+id/z_m_value"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:text="@string/value" />

            <TextView
                android:id="@+id/z_m_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/micro_tesla" />

        </LinearLayout>


        <TextView
            android:id="@+id/title_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:text="@string/gps" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/latitude_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/latitude"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/latitude_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:text="@string/value" />

            <TextView
                android:id="@+id/longitude_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/longitude"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/longitude_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:text="@string/value" />


            <TextView
                android:id="@+id/altitude_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/altitude"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/altitude_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:text="@string/value" />

            <TextView
                android:id="@+id/speed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/speed"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/speed_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/value" />


        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/button_start_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:text="@string/start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/trip_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/trip_history"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_start_stop" />

    <EditText
        android:id="@+id/trip_frecuency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:hint="Hz"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/id_vehicle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_frequency" />

    <TextView
        android:id="@+id/text_frequency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:text="@string/frequency"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/text_vehicle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <EditText
        android:id="@+id/id_vehicle"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="ID vehiculo"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/trip_frecuency"
        app:layout_constraintTop_toBottomOf="@+id/text_vehicle" />

    <TextView
        android:id="@+id/text_vehicle"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/vehicle"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_frequency"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/button_register_nc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="30dp"
        android:text="@string/register_nc"
        app:cornerRadius="80dp"
        android:backgroundTint="@color/pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>